    <script>
        let activeButtonId = 1;

        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });

        function setActive(button) {
            var buttons = document.querySelectorAll('.button');
            buttons.forEach(function(btn) {
                btn.classList.remove('button-active');
            });

            button.classList.add('button-active');

            activeButtonId = button.getAttribute('data-id');

            var contents = document.querySelectorAll('.content .container-fluid');
            contents.forEach(function(content) {
                content.classList.add('hidden');
            });

            var activeContent = document.getElementById('content-' + activeButtonId);
            if (activeContent) {
                activeContent.classList.remove('hidden');
            }
        }

        document.querySelectorAll('.button').forEach(button => {
            button.addEventListener('click', function() {
                setActive(this);
            });
        });

        document.getElementById('step-1-submit').addEventListener('click', function() {
            const playerInput = document.getElementById('step-1-input').value;

            fetch('/innovate/step1', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ playerInput: playerInput })
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                document.querySelector('button[data-id="2"]').click();
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        });

        document.getElementById('step-2-submit').addEventListener('click', function() {
            const playerInput = document.getElementById('step-2-input').value;

            fetch('/innovate/step2', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ playerInput: playerInput })
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                document.querySelector('button[data-id="3"]').click();
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        });

        document.getElementById('step-3-submit').addEventListener('click', function() {
            document.querySelector('button[data-id="4"]').click();
        });

        document.getElementById('step-4-submit').addEventListener('click', function() {
            document.querySelector('button[data-id="5"]').click();
        });

        document.getElementById('step-5-submit').addEventListener('click', function() {
            document.querySelector('button[data-id="6"]').click();
        });

        document.getElementById('step-6-submit').addEventListener('click', function() {
            const problemDefinition = document.getElementById('problemDefinition').value;
            const context = document.getElementById('context').value;
            const proposedSolution = document.getElementById('proposedSolution').value;
            const alpacaPrompt = document.getElementById('alpacaPrompt').value;
            const playerImage = document.getElementById('playerImage').files[0];

            const formData = new FormData();
            formData.append('problemDefinition', problemDefinition);
            formData.append('context', context);
            formData.append('proposedSolution', proposedSolution);
            formData.append('alpacaPrompt', alpacaPrompt);
            formData.append('playerImage', playerImage);


            fetch('/innovate/step6', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                window.location.href = '/levels';
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        });

        document.getElementById('viewSampleButton').addEventListener('click', function() {
            document.getElementById('problemDefinition').placeholder = "Students need to mark their attendance at the start of the class but they often forget to. How can we automate the entire process.";
            document.getElementById('context').placeholder = "Classes that require an attendance";
            document.getElementById('proposedSolution').placeholder = "Students scan their unique QR codes using an attendance app on their smartphones or a classroom device upon entering the class. The app records attendance automatically and updates the digital attendance sheet in real-time. ";
            document.getElementById('alpacaPrompt').placeholder ="Students need to mark their attendance at the start of the class but they often forget to. How can we automate the entire process.";

            setTimeout(() => {
                document.getElementById('problemDefinition').placeholder = "";
            document.getElementById('context').placeholder = "";
            document.getElementById('proposedSolution').placeholder = "";
            document.getElementById('alpacaPrompt').placeholder =""; 
            }, 10000);
        });

    </script>

    
    
