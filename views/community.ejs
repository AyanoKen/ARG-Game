<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/community-styles.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="/images/modulelogo.png" alt="Logo" class="logo">
                </a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mx-auto nav-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/community"><u>Community</u></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/search">The Search</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/playerinfo">
                                <img src="<%= user.playerAvatar %>" alt="Icon" class="icon">
                            </a>
                        </li>
                        <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Sign in</a>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <section class="troopstat-section">
        <div class="container-fluid">
            <div class="row" style="margin-top: 1%;">
                <div class="col-md-3">
                    <div id="tempus-stats" class="stat-card">
                        <img src="/images/tempus.png" alt="">
                        <h1>TROOP TEMPUS</h1>
                        <h2><%= troopCounts.Tempus %></h2>
                        <h3>AGENTS RECRUITED</h3>
                    </div>
                </div>
                <div class="col-md-3">
                    <div id="memoria-stats" class="stat-card">
                        <img src="/images/memoria.png" alt="">
                        <h1>TROOP MEMORIA</h1>
                        <h2><%= troopCounts.Memoria %></h2>
                        <h3>AGENTS RECRUITED</h3>
                    </div>
                </div>
                <div class="col-md-3">
                    <div id="empathia-stats" class="stat-card">
                        <img src="/images/empathia.png" alt="">
                        <h1>TROOP EMPATHIA</h1>
                        <h2><%= troopCounts.Empathia %></h2>
                        <h3>AGENTS RECRUITED</h3>
                    </div>
                </div>
                <div class="col-md-3">
                    <div id="neurona-stats" class="stat-card">
                        <img src="/images/neurona.png" alt="">
                        <h1>TROOP NEURONA</h1>
                        <h2><%= troopCounts.Neurona %></h2>
                        <h3>AGENTS RECRUITED</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="community-section">
        <h1 style="text-align: center; margin: 2% 0;">COMMUNITY</h1>

        <div class="container-fluid">
            <ul id="myTab" class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="innovate-tab" data-toggle="tab" href="#innovate" role="tab" aria-controls="innovate" aria-selected="true">AI ENABLED SOLUTIONS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="reimagine-tab" data-toggle="tab" href="#reimagine" role="tab" aria-controls="reimagine" aria-selected="false">RE-IMAGINE PURDUE</a>
                </li>
            </ul>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="innovate" role="tabpanel" aria-labelledby="innovate-tab">
                    <h3>Discover solutions to pressing educational challenges created using AI by our Purdue community. <br> The top 10 submissions will receive recognition from Purdue Online</h3>
                    
                    <div id="innovatePosts" class="row">
                        <% innovatePosts.forEach((post, index) => { %>
                            <div class="col-md-4 mb-4">
                                <div style='background-image: url("/uploads/<%= post[post.length - 1].split('/').pop() %>");' class="card innovate-card" data-index="<%= index %>" data-image="<%= post[post.length - 1].split('/').pop() %>">
                                    
                                    <div class="card-body">
                                        <h5 class="card-title"><%= post[2] %></h5>
                                        <p class="card-text">
                                            <%= post[0] %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    <nav id="innovatePagination" aria-label="Page navigation">
                        <ul class="pagination">
                            <!-- Pagination buttons will be added here by JavaScript -->
                        </ul>
                    </nav>
                </div>

                <div class="tab-pane fade" id="reimagine" role="tabpanel" aria-labelledby="reimagine-tab">
                    <h3>Discover how our players envision a transformed Purdue University using AI-generated art. <br> The top 5 most-liked creations will receive prizes from Purdue Online. Like and Share!</h3>
                    <div id="reimaginePosts" class="row">
                        <% reimaginePosts.forEach((post, index) => { %>
                            <div class="col-md-4 mb-4">
                                <div style='background-image: url("/uploads/<%= post[post.length - 2].split('/').pop() %>");' class="card reimagine-card" data-index="<%= index %>" data-image="<%= post[post.length - 2].split('/').pop() %>">
                                    
                                    <div class="card-body d-flex justify-content-between">
                                        <div class="text-section">
                                            <h5 class="card-title"><%= post[1] %></h5>
                                        </div>

                                        <div class="button-section">
                                            <button class="like-button btn btn-outline-danger btn-sm mr-2" data-post-url="uploads/<%= post[post.length - 2].split('/').pop() %>">
                                                <i class="fas fa-heart"></i> <%= post[post.length -1] %>
                                            </button>
                                            <button class="share-button btn btn-outline-primary btn-sm">
                                                <i class="fas fa-share"></i>
                                            </button>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    <nav id="reimaginePagination" aria-label="Page navigation">
                        <ul class="pagination">
                            <!-- Pagination buttons will be added here by JavaScript -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>

    <script>
        
        var user = <%-user%>;

        
        
        document.addEventListener('DOMContentLoaded', function() {
            const cardsPerPage = 6;

            // Initialize pagination for Innovate and Reimagine tabs
            function setupPagination(tabId, cardClass, paginationId, posts) {
                const cards = document.querySelectorAll(cardClass);
                const totalPages = Math.ceil(cards.length / cardsPerPage);
                const pagination = document.querySelector(paginationId);
                let currentPage = 1;

                function showPage(page) {
                    cards.forEach((card, index) => {
                        card.style.display = (index >= (page - 1) * cardsPerPage && index < page * cardsPerPage) ? 'block' : 'none';
                    });
                }

                function createPagination() {
                    pagination.innerHTML = '';
                    for (let i = 1; i <= totalPages; i++) {
                        const pageItem = document.createElement('li');
                        pageItem.classList.add('page-item');
                        const pageLink = document.createElement('a');
                        pageLink.classList.add('page-link');
                        pageLink.textContent = i;
                        pageItem.appendChild(pageLink);
                        pageItem.addEventListener('click', () => {
                            currentPage = i;
                            showPage(currentPage);
                            updatePagination();
                        });
                        pagination.appendChild(pageItem);
                    }
                }

                function updatePagination() {
                    document.querySelectorAll(paginationId + ' .page-item').forEach((item, index) => {
                        item.classList.toggle('active', index + 1 === currentPage);
                    });
                }

                // Initialize
                showPage(currentPage);
                createPagination();
                updatePagination();
            }

            document.querySelectorAll('.innovate-card, .reimagine-card').forEach(card => {
                card.addEventListener('click', function() {
                    const imageName = this.getAttribute('data-image');
                    window.location.href = `/community/${encodeURIComponent(imageName)}`;
                });
            });
            
            document.querySelectorAll('.like-button').forEach(button => {
                button.addEventListener('click', async function() {
                    const postUrl = this.getAttribute('data-post-url'); // Assuming the post URL is stored in a data attribute

                    try {

                        if(user){
                            const response = await fetch('/likePost', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ postUrl })
                            });

                            const result = await response.json();
                            if (result.success) {
                                // Increment the like counter visually
                                const likeCounter = this.querySelector('.like-counter');
                                likeCounter.textContent = parseInt(likeCounter.textContent) + 1;
                            } else {
                                alert(result.message);
                            }
                        } else {
                            alert("Please Login");
                        }
                        
                    } catch (error) {
                        console.error('Error:', error);
                    }
                });
            });

            // Set up pagination for Innovate and Reimagine tabs
            setupPagination('#innovate', '.innovate-card', '#innovatePagination', <%- JSON.stringify(innovatePosts) %>);
            setupPagination('#reimagine', '.reimagine-card', '#reimaginePagination', <%- JSON.stringify(reimaginePosts) %>);
        });
    </script>

</body>
</html>
