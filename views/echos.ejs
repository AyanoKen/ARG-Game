    <script>

        const video = document.getElementById('vid-1');
        const playPauseBtn = document.getElementById('playPauseBtn');

        // Play/Pause functionality
        playPauseBtn.addEventListener('click', () => {
            if (video.paused || video.ended) {
                video.play();
                playPauseBtn.style.display = 'none';

                playPauseBtn.classList.add("hidden");
                video.classList.remove("hidden");
            }
        });

        document.addEventListener('DOMContentLoaded', () => {

            const questions = document.querySelectorAll('.question');
            let currentQuestionIndex = 0;

            let playerAnswers = []

            document.getElementById("clickheretobegin").addEventListener('click', function(event) {
                document.querySelector(".cutscene").classList.add("hidden");
                document.querySelector(".level").classList.remove("hidden");
                video.muted = true;
            }, { once: true });

            document.getElementById('begin-button-0').addEventListener('click', () => {
                
                document.querySelector('#content-1').classList.remove('hidden');
                document.querySelector('.video').classList.add("hidden");
            });

            document.getElementById('begin-button-1').addEventListener('click', () => {
                
                document.querySelector('#content-1 .question-wrapper').classList.remove('hidden');
                document.querySelector('#content-1 .submit-button').classList.remove('hidden');
                autoScroll();
            });

            document.getElementById('begin-button-2').addEventListener('click', () => {
                
                document.querySelector('#content-2 .question-wrapper').classList.remove('hidden');
                document.querySelector('#content-2 .submit-button').classList.remove('hidden');
                autoScroll();
            });

            document.getElementById('begin-button-3').addEventListener('click', () => {
                
                document.querySelector('#content-3 .question-wrapper').classList.remove('hidden');
                document.querySelector('#content-3 .submit-button').classList.remove('hidden');
                autoScroll();
            });

            document.getElementById('begin-button-4').addEventListener('click', () => {
                
                document.querySelector('#content-4 .question-wrapper').classList.remove('hidden');
                document.querySelector('#content-4 .submit-button').classList.remove('hidden');
                autoScroll();
            });

            document.getElementById('begin-button-5').addEventListener('click', () => {
                
                document.querySelector('#content-5 .question-wrapper').classList.remove('hidden');
                document.querySelector('#content-5 .submit-button').classList.remove('hidden');
                autoScroll();
            });

            questions.forEach(question => {
                question.addEventListener('click', handleAnswerClick);
            });

            function handleAnswerClick(event) {
                const answerElement = event.target;

                if (answerElement.classList.contains('answer')) {
                    const answerText = answerElement.textContent.trim();
                    const troopValue = answerElement.getAttribute('data-troop');

                    playerAnswers.push(troopValue);

                    answerElement.classList.add('selected');
                    questions[currentQuestionIndex].style.pointerEvents = 'none';
                    currentQuestionIndex++;
                }
            }

            document.getElementById('submit-1').addEventListener('click', function() {

                document.getElementById('content-1').classList.add('hidden');
                document.getElementById('content-2').classList.remove('hidden');

            });

            document.getElementById('submit-2').addEventListener('click', function() {

                document.getElementById('content-2').classList.add('hidden');
                document.getElementById('content-3').classList.remove('hidden');

            });

            document.getElementById('submit-3').addEventListener('click', function() {

                document.getElementById('content-3').classList.add('hidden');
                document.getElementById('content-4').classList.remove('hidden');

            });

            document.getElementById('submit-4').addEventListener('click', function() {

                document.getElementById('content-4').classList.add('hidden');
                document.getElementById('content-5').classList.remove('hidden');

            });

            document.getElementById('submit-5').addEventListener('click', function() {

                fetch('/echos/submit', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({playerAnswers}),
                })
                .then(response => response.json())
                .then(data => {
                    document.querySelector("#badgeImg").src = '/images/' + data.badgeName + '_avatar.png';
                    document.querySelector("#badgeDetail").textContent = data.badgeDetail;
                    document.querySelector("#badgeName").textContent = data.badgeName + "PROFILE";
                })

                document.getElementById('content-5').classList.add('hidden');
                document.querySelector('.end-screen').classList.remove('hidden');

            });



            function autoScroll() {
                window.scrollBy({
                    top: 1000, // Adjust the scroll amount as needed
                    behavior: 'smooth'
                });
            }

        });
    </script>
