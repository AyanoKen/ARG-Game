<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <ul class="nav nav-tabs" id="adminTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="innovate-tab" data-toggle="tab" href="#innovate" role="tab" aria-controls="innovate" aria-selected="true">Innovate Step 6</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="reimagine-tab" data-toggle="tab" href="#reimagine" role="tab" aria-controls="reimagine" aria-selected="false">Reimagine Step 6</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="addProject-tab" data-toggle="tab" href="#addProject" role="tab" aria-controls="addProject" aria-selected="false">Player Projects</a>
            </li>
        </ul>
        <div class="tab-content" id="adminTabContent">
            <!-- Innovate Step 6 Tab -->
            <div class="tab-pane fade show active" id="innovate" role="tabpanel" aria-labelledby="innovate-tab">
                <% innovateImages.forEach(item => { %>
                    <div class="card mt-4">
                        <img src="/<%= item[1][item[1].length - 1] %>" class="card-img-top" alt="Innovate Image">
                        <div class="card-body">
                            <h5 class="card-title">User ID: <%= item[0] %></h5>
                            <p class="card-text">
                                <% for (let i = 0; i < item[1].length - 1; i++) { %>
                                    <%= item[1][i] %><br>
                                <% } %>
                            </p>
                            <button class="btn btn-primary" onclick="approveInnovate('<%= item[0] %>', <%= JSON.stringify(item[1]) %>)">Approve</button>
                            <button class="btn btn-warning" onclick="rejectInnovate('<%= item[0] %>', <%= JSON.stringify(item[1]) %>)">Reject</button>
                        </div>
                    </div>
                <% }); %>
            </div>
            <!-- Reimagine Step 6 Tab -->
            <div class="tab-pane fade" id="reimagine" role="tabpanel" aria-labelledby="reimagine-tab">
                <% reimagineImages.forEach(item => { %>
                    <div class="card mt-4">
                        <img src="/<%= item[1][item[1].length - 1] %>" class="card-img-top" alt="Reimagine Image">
                        <div class="card-body">
                            <h5 class="card-title">User ID: <%= item[0] %></h5>
                            <p class="card-text">
                                <% for (let i = 0; i < item[1].length - 1; i++) { %>
                                    <%= item[1][i] %><br>
                                <% } %>
                            </p>
                            <button class="btn btn-primary" onclick="approveReimagine('<%= item[0] %>', <%= JSON.stringify(item[1]) %>)">Approve</button>
                            <button class="btn btn-primary" onclick="rejectReimagine('<%= item[0] %>', <%= JSON.stringify(item[1]) %>)">Reject</button>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="tab-pane fade" id="addProject" role="tabpanel" aria-labelledby="addProject-tab">
                <% addProjectImages.forEach(item => { %>
                    <div class="card mt-4">
                        <img src="/<%= item[1][item[1].length - 1] %>" class="card-img-top" alt="Player Project Image">
                        <div class="card-body">
                            <h5 class="card-title">User ID: <%= item[0] %></h5>
                            <p class="card-text">
                                <% for (let i = 0; i < item[1].length - 1; i++) { %>
                                    <%= item[1][i] %><br>
                                <% } %>
                            </p>
                            <button class="btn btn-primary" onclick="approveProject('<%= item[0] %>', <%= JSON.stringify(item[1]) %>)">Approve</button>
                            <button class="btn btn-primary" onclick="rejectProject('<%= item[0] %>', <%= JSON.stringify(item[1]) %>)">Reject</button>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function approveInnovate(userId, arrayData) {
            fetch('/approveInnovate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ userId, arrayData })
            }).then(response => {
                if (response.ok) {
                    alert('Innovate post approved!');
                } else {
                    alert('Approval failed!');
                }
            });
        }

        function rejectInnovate(userId, arrayData) {
            fetch('/rejectInnovate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ userId, arrayData })
            }).then(response => {
                if (response.ok) {
                    alert('Innovate post rejected successfully!');
                } else {
                    alert('Rejection failed! Contact Ayano');
                }
            });
        }
    
        function approveReimagine(userId, arrayData) {

            
            fetch('/approveReimagine', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ userId, arrayData })
            }).then(response => {
                if (response.ok) {
                    alert('Reimagine post approved!');
                } else {
                    alert('Approval failed!');
                }
            });
        }

        function rejectReimagine(userId, arrayData) {

            
            fetch('/rejectReimagine', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ userId, arrayData })
            }).then(response => {
                if (response.ok) {
                    alert('Reimagine post Rejected!');
                } else {
                    alert('Rejection Failed! Contact Ayano');
                }
            });
        }
        
    </script>
</body>
</html>